<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.exercise.peramalandata.ActivityResultManual">
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:text="Pilih salah satu baris untuk melihat detail"-->
            <!--android:textSize="19sp"-->
            <!--android:gravity="center"-->
            <!--android:layout_weight="1"/>-->
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="#ff4d4d">
            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="t"
                android:textSize="18sp"/>
            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="dT"
                android:textSize="18sp"/>
            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="T"
                android:textSize="18sp"/>
            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Error"
                android:textSize="18sp"/>
        </LinearLayout>
        <ListView
            android:id="@+id/listViewResultManual"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.3"></ListView>
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/textHasilPermalan"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hasil Peramalan : "
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hasil peramalan n+1  "
                android:textSize="17sp"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/textResultManual"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="test"
                android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Periode"
                android:textSize="17sp"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/textPeriodeManual"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="test"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Error"
                android:textSize="17sp"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/textErrorManual"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="test"
                android:textSize="17sp"/>
        </LinearLayout>
        </LinearLayout>

</RelativeLayout>
